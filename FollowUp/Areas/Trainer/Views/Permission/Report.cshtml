                            }

                            table, th, td {
                                border: 1px solid #000;
                            }

                            th, td {
                                padding: 10px;
                                text-align: center;
                            }

                            .cen {
                                text-align: center;
                            }

                            .right {
                                text-align: right;
                            }
                            .no-print {
                                display: none;
                            }
                            `;

            document.body.innerHTML = `<style>${printStyles}</style>` + printContent;
            window.print();
            document.body.innerHTML = originalContent;
            $("#btnPrint").removeClass('d-none');

            location.reload();
        }
    </script>
</body>
</html>
