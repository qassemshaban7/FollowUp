@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HeadOfDept/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>الإحصائيات</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #FFFFFF;
            color: #3C3883;
            margin: 0;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header h2 {
                color: #6C63FF;
                border-bottom: 2px solid #6C63FF;
                padding-bottom: 10px;
                margin: 0;
            }

        .buttons {
            display: flex;
            gap: 10px;
        }

        .btn-attendance-chart, .btn-download {
            background-color: #6C63FF;
            color: #FFFFFF;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            display: inline-flex;
            align-items: center;
        }

            .btn-attendance-chart:hover, .btn-download:hover {
                background-color: #5a54d4;
            }

            .btn-attendance-chart i, .btn-download i {
                margin-right: 5px;
            }

        .styled-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            font-size: 18px;
            text-align: left;
            background-color: #FFFFFF;
            border: 1px solid #dddddd;
        }

            .styled-table thead tr {
                background-color: #6C63FF;
                color: #FFFFFF;
            }

            .styled-table th,
            .styled-table td {
                padding: 12px 15px;
                border: 1px solid #dddddd;
            }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

        .form-container {
            margin-bottom: 20px;
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            margin-bottom: 5px;
            display: block;
            color: #3C3883;
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            color: #3C3883;
        }

        button[type="submit"] {
            background-color: #6C63FF;
            color: #FFFFFF;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

            button[type="submit"]:hover {
                background-color: #5a54d4;
            }

        .form-group input {
            width: 200px;
            padding: 5px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <form method="get" asp-action="Statistics" asp-controller="Statistics">
            <div class="form-group">
                <label for="date">التاريخ:</label>
                <input type="date" id="date" name="date" required />
            </div>
            <button type="submit">عرض الإحصائيات</button>
        </form>
    </div>
