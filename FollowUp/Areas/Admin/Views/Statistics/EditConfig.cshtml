@using FollowUp.ViewModels
@model config

@{
    ViewData["Title"] = "EditConfig";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="br-pagetitle">
    <h3 class="text-info mr-3">تعديل البيانات  </h3>
</div><!-- d-flex -->

<style>
    .form-check {
        margin-bottom: 10px;
    }

    .form-check-input {
        margin-right: 10px;
    }

    .form-check-label {
        font-size: 16px;
    }

    .te {
        text-align: right;
        padding-right: 30px;
    }
</style>

<div class="br-pagebody">
    <div class="br-section-wrapper">
        <div class="row">
            <div class="col-xl-12">
                <div class="form-layout form-layout-4">
                    @if (Model.Id != 5 && Model.Id != 7)
                    {
                        <form id="myForm" method="post" asp-action="EditConfig" asp-controller="Statistics" enctype="multipart/form-data">
                            @if (Model.Id == 1)
                            {
                                <div class="row mb-3">
                                    <label class="col-sm-4 form-control-label">اسم المدير: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <input asp-for="Name" type="text" class="form-control" placeholder="اسم المدير" required>
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                            }
                            else if (Model.Id == 2)
                            {
                                <div class="row mb-3">
                                    <label class="col-sm-4 form-control-label">اسم الموظف: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <input asp-for="Name" type="text" class="form-control" placeholder="اسم الموظف" required>
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                            }
                            else if (Model.Id == 3)
                            {
                                <div class="row mb-3">
                                    <label class="col-sm-4 form-control-label">اسم الكلية كامل بالعربي: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <textarea asp-for="Name" type="text" class="form-control" placeholder="اسم المؤسسة والكلية كامل بالعربي" required></textarea>
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                            }
                            else if (Model.Id == 4)
                            {
                                <div class="row mb-3">
                                    <label class="col-sm-4 form-control-label">اسم المؤسسة والكلية كامل بالانجليزي: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <textarea asp-for="Name" type="text" class="form-control" placeholder="اسم المؤسسة والكلية كامل بالانجليزي" required></textarea>
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                            }
                            else if (Model.Id == 6)
                            {
                                <div class="row mb-3">
                                    <label class="col-sm-4 form-control-label">اسم الكلية فقط بالعربي: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <input asp-for="Name" type="text" class="form-control" placeholder="اسم الكلية فقط بالعربي" required>
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                            }
                            <input type="hidden" asp-for="Id" />

                            <div class="form-layout-footer mg-t-30 text-center">
                                <input type="submit" value="حفظ التعديلات" class="btn btn-info">
                                <a asp-action="config" class="btn btn-secondary">الرجوع</a>
                            </div><!-- form-layout-footer -->
                        </form>
                    }
                    else if(Model.Id == 5)
                    {
                        <form id="myForm" method="post" asp-action="EditLogo" asp-controller="Statistics" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <label class="col-sm-4 form-control-label">الشعار: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input asp-for="Name" type="file" class="form-control-image" required accept="image/*">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Id" />

                            <div class="form-layout-footer mg-t-30 text-center">
                                <input type="submit" value="حفظ التعديلات" class="btn btn-info">
                                <a asp-action="config" class="btn btn-secondary">الرجوع</a>
                            </div><!-- form-layout-footer -->
                        </form>
                    }
                    else if (Model.Id == 7)
                    {
                        <form id="myForm" method="post" asp-action="EditHomePageLogo" asp-controller="Statistics" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <label class="col-sm-4 form-control-label">الشعار: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input asp-for="Name" type="file" class="form-control-image" required accept="image/*">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Id" />

                            <div class="form-layout-footer mg-t-30 text-center">
                                <input type="submit" value="حفظ التعديلات" class="btn btn-info">
                                <a asp-action="config" class="btn btn-secondary">الرجوع</a>
                            </div><!-- form-layout-footer -->
                        </form>
                    }
                </div><!-- form-layout -->
            </div>
        </div><!-- row -->
    </div><!-- br-section-wrapper -->
</div><!-- br-pagebody -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}